{
  "compilerOptions": {
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": false,

    "allowSyntheticDefaultImports": true,
    "allowUnusedLabels": true,

    "experimentalDecorators": true,
    "strictFunctionTypes": true
  },
  "include": [
    "./src/**/*"
  ]
}
